            {{/if}}
          </td>
        </tr>
        <tr titel="Kundtyp">
          <th>Kundtyp</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="power-select" @options={{customerTypes}} @value={{find-by "id" changeset.customerTypeId customerTypes}} @onChange={{action (mut changeset.customerTypeId) value="id"}} as |el|>
                <el.control @searchField="nameSv" @searchEnabled={{true}} @searchPlaceholder="Type your name" as |customerType|>
                  {{customerType.nameSv}}
                </el.control>
              </form.element>
            {{else}}
              {{get (find-by "id" order.customerTypeId customerTypes) 'nameSv'}}
            {{/if}}
          </td>
        </tr>
        <tr titel="Låntagarnummer i Koha">
          <th>Låntagarnummer i Koha</th>
          <td>
            {{#if isEditing}}
              <form.element
                @controlType="text"
                @property="kohaBorrowernumber"
              as |el|>
                <el.control @disabled={{true}}/>
              </form.element>
            {{else}}
              {{order.kohaBorrowernumber}}
            {{/if}}
          </td>
        </tr>
        <tr titel="Låntagarkategori i Koha">
          <th>Låntagarkategori i Koha</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @maxlength="2" @property="kohaUserCategory" />
            {{else}}
              {{order.kohaUserCategory}}
            {{/if}}
          </td>
        </tr>
        <tr titel="Organisation i Koha">
          <th>Organisation i Koha</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @maxlength="1" @property="kohaOrganisation" />
            {{else}}
              {{order.kohaOrganisation}}
            {{/if}}
          </td>
        </tr>
      </tbody>
    </table>
    <h4>Leveransuppgifter</h4>
    <table class="table table-striped {{if isEditing " table-sm"}}">
      <tbody>
        <tr titel="Gatuadress/Box">
          <th>Gatuadress/Box</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="deliveryAddress" />
