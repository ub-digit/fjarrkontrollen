            {{/if}}
          </td>
        </tr>
        <tr titel="Beställningstyp">
          <th>Beställningstyp</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="power-select" @options={{orderTypes}} @value={{find-by "id" changeset.orderTypeId orderTypes}} @onChange={{action (mut changeset.orderTypeId) value="id"}} as |el|>
                <el.control @searchField="nameSv" @searchEnabled={{true}} @searchPlaceholder="Type your name" as |orderType|>
                  {{orderType.nameSv}}
                </el.control>
              </form.element>
            {{else}}
              {{get (find-by "id" order.orderTypeId orderTypes) 'nameSv'}}
            {{/if}}
          </td>
        </tr>
        <tr titel="Leveransmetod">
          <th>Leveransmetod</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="power-select" @options={{deliveryMethods}} @value={{find-by "id" changeset.deliveryMethodId deliveryMethods}} @onChange={{action (mut changeset.deliveryMethodId) value="id"}} as |el|>
                <el.control @searchField="name" @searchEnabled={{true}} @searchPlaceholder="Type your name" as |deliveryMethod|>
                  {{deliveryMethod.name}}
                </el.control>
              </form.element>
            {{else}}
              {{get (find-by "id" order.deliveryMethodId deliveryMethods) 'name'}}
            {{/if}}
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-12 col-md-6">
    <h4>Låntagare</h4>
    <table class="table table-striped {{if isEditing " table-sm"}}">
      <tbody>
        <tr titel="Lånekortsnummer">
          <th>Lånekortsnummer</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="libraryCardNumber" />
              {{#if changeset.libraryCardNumber}}
              <a class="pt-1 d-block" href="#" {{action "fetchPatronInfo" changeset.libraryCardNumber preventDefault=true}}>
                Hämta uppgifter från Koha
              </a>
              {{/if}}
            {{else}}
              {{order.libraryCardNumber}}
              {{#if order.kohaBorrowernumber}}
                <i class="fas fa-check"></i>
              {{/if}}
            {{/if}}
          </td>
        </tr>

        <tr titel="Namn">
          <th>Namn</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="name" />
            {{else}}
              {{order.name}}
            {{/if}}

          </td>
        </tr>

        <tr titel="X-konto">
          <th>X-konto</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="xAccount" />
            {{else}}
              {{order.xAccount}}
            {{/if}}
          </td>
        </tr>

        <tr titel="E-post">
          <th>E-post</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="emailAddress" />
            {{else}}
              {{order.emailAddress}}
            {{/if}}
          </td>
        </tr>

        <tr titel="Språkval i formulär">
          <th>Språkval i formulär</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="formLang" />
            {{else}}
              {{order.formLang}}
            {{/if}}
          </td>
        </tr>

        <tr titel="Organisation">
          <th>Organisation</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="company1" />
            {{else}}
              {{order.company1}}
            {{/if}}
          </td>
        </tr>

        <tr titel="Institution">
          <th>Institution</th>
          <td>
            {{#if isEditing}}
