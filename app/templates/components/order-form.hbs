            {{/if}}

          </td>
        </tr>
        <tr titel="Titel - tidskrift/bok">
          <th>Titel - tidskrift/bok</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="journalTitle" />
            {{else}}
