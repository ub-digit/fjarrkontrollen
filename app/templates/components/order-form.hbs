            {{/if}}
          </td>
        </tr>

        <tr titel="Ort">
          <th>Ort</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="invoicingPostalAddress2" />
            {{else}}
              {{order.invoicingPostalAddress2}}
            {{/if}}
          </td>
        </tr>

        <tr titel="Beställarid">
          <th>Beställarid</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="invoicingId" />
            {{else}}
              {{order.invoicingId}}
            {{/if}}
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
</BsForm>
