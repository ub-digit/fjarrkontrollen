<BsForm
  @formLayout="vertical"
  @model={{this.changeset}}
  @onSubmit={{this.saveOrder}}
  @onInvalid={{action "orderInvalid"}}
  @showValidations={{this.showValidations}}
as |form|>
{{yield (hash form=form changeset=this.changeset)}}
<div class="row">
  <div class="col-12">
    {{#if errors}}
      {{#each errors as |error|}}
        <BsAlert @dismissible={{false}} @type="danger">
          {{error}}
        </BsAlert>
      {{/each}}
    {{/if}}
    {{!#liquid-if message}}
      {{!#bs-alert dismissible=false type="success"}}
        {{!message}}
      {{!/bs-alert}}
    {{!/liquid-if}}
  </div>
</div>
{{#if kohaSearchUrl }}
  <div class="order-search">
    <a target="_blank" href="{{kohaSearchUrl}}">Sök posten i Koha</a>
  </div>
{{/if}}
<div class="row">
  <div class="col-12 col-md-6">
    <h5>Handläggningsgrupp</h5>

    {{#if isEditing}}
      <form.element @controlType="power-select" @options={{managingGroups}} @value={{find-by "id" changeset.managingGroupId managingGroups}} @onChange={{action (mut changeset.managingGroupId) value="id"}} as |el|>
        <el.control @disabled={{order.isNew}} @searchField="name" @searchEnabled={{true}} @searchPlaceholder="Type your name" as |pickupLocation|>
          {{pickupLocation.name}}
        </el.control>
      </form.element>
    {{else}}
      <p>
        {{#if order.managingGroupId}}
          {{get (find-by "id" order.managingGroupId managingGroups) "name"}}
        {{else}}
          Ej angivet
        {{/if}}
      </p>
    {{/if}}

    <h5>Avhämtningsbibliotek</h5>

    {{#if isEditing}}
      <form.element @controlType="power-select" @options={{pickupLocations}} @value={{find-by "id" changeset.pickupLocationId pickupLocations}} @onChange={{action (mut changeset.pickupLocationId) value="id"}} as |el|>
        <el.control @searchField="nameSv" @searchEnabled={{true}} @searchPlaceholder="Type your name" as |pickupLocation|>
          {{pickupLocation.nameSv}}
        </el.control>
      </form.element>
    {{else}}
      <p>
        {{#if order.pickupLocationId}}
          {{get (find-by "id" order.pickupLocationId pickupLocations) "nameSv"}}
        {{else}}
          Ej angivet
        {{/if}}
      </p>
    {{/if}}
    {{!TODO: Implement isActive}}
    <h5>Status</h5>
    {{#if isEditing}}
      <form.element @controlType="power-select" @options={{statusOptions}} @placeholder="Välj status" @value={{find-by "value" changeset.statusId statusOptions}} @onChange={{action (mut changeset.statusId) value="value"}} as |el|>
        <el.control @searchField="label" @searchEnabled={{true}} @searchPlaceholder="Type your name" as |status|>
          {{status.label}}
        </el.control>
      </form.element>
    {{else}}
      <p>
        {{#if order.statusId}}
          {{get (find-by "value" order.statusId statusOptions) "label"}}
        {{else}}
            Ej angivet
        {{/if}}
      </p>
    {{/if}}
    <h5>Arkivera</h5>
    <form.element
      @label="Arkiverad"
      @controlType="checkbox"
      @value={{changeset.isArchived}}
      @onChange={{action (mut changeset.isArchived)}}
      as |el|>
        <el.control @disabled={{not isEditing}}/>
      </form.element>
  </div>
  <div class="col-12 col-sm-6 col-md-3">
    <h5>Utlånande bibliotek</h5>
    {{#if isEditing}}
      <form.element @property="lendingLibrary" @controlType="text" />
      {{!TODO: active only filter}}
      {{!TODO: option for none, also applies to others}}
    {{else}}
      <p>
        {{if order.lendingLibrary order.lendingLibrary "Ej angivet"}}
      </p>
    {{/if}}
    <h5>Levererad från</h5>
    {{#if isEditing}}
      <form.element @controlType="power-select" @options={{deliverySourceOptions}} @value={{find-by "value" changeset.deliverySourceId deliverySourceOptions}} @onChange={{action (mut changeset.deliverySourceId) value="value"}} as |el|>
        <el.control @searchField="label" @searchEnabled={{true}} @searchPlaceholder="Type your name" as |option|>
          {{option.label}}
        </el.control>
      </form.element>
    {{else}}
      <p>
        {{#if order.deliverySourceId}}
          {{get
            (find-by "id" order.deliverySourceId deliverySources)
            "name"
          }}
        {{else}}
          Ej angivet
        {{/if}}
      </p>
    {{/if}}
    <h5>Ej aktuell efter</h5>
    {{#if isEditing}}
      <form.element @controlType="text" @property="notValidAfter" />
    {{else}}
      <p>
      {{if order.notValidAfter order.notValidAfter "Ej angivet"}}
      </p>
    {{/if}}
    <h5>Utanför Norden</h5>
    <form.element
      @label="Utanför Norden"
      @controlType="checkbox"
      @value={{changeset.orderOutsideScandinavia}}
    as |el|>
      <el.control  @disabled={{not isEditing}}/>
    </form.element>
  </div>
  <div class="col-12 col-sm-6 col-md-3">
    <h5>Återlämningsdatum</h5>
    {{#if isEditing}}
      <form.element @controlType="text" @property="loanPeriod" />
    {{else}}
      <p>
        {{if changeset.loanPeriod changeset.loanPeriod "Ej angivet"}}
      </p>
    {{/if}}
    <h5>Pris (SEK)</h5>
    {{#if isEditing}}
      <form.element @controlType="number" @property="price" />
    {{else}}
      <p>
        {{if order.price order.price "Ej angivet"}}
      </p>
    {{/if}}
    <h5>Ska faktureras</h5>
    <form.element
      @label="Ska faktureras"
      @controlType="checkbox"
      @value={{changeset.toBeInvoiced}}
      @onChange={{action (mut changeset.toBeInvoiced)}}
    as |el|>
      <el.control @disabled={{not isEditing}}/>
    </form.element>
  </div>
</div>
<div class="row">
