            {{/if}}
          </td>
        </tr>
        <tr titel="Nummer">
          <th>Nummer</th>
          <td>
            {{#if isEditing}}
              <form.element @controlType="text" @property="issue" />
            {{else}}
              {{order.issue}}
            {{/if}}
          </td>
        </tr>
        <tr titel="Sidor">
          <th>Sidor</th>
          <td>
            {{#if isEditing}}
