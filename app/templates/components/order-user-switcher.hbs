<BsDropdown as |dd|>
  {{#if this.assignedUsername}}
    <dd.button @type="primary" class="btn-sm">
      {{this.assignedUsername}}
      <span class="caret"></span>
    </dd.button>
  {{else}}
    <dd.button class="btn-sm">
      Ingen
      <span class="caret"></span>
    </dd.button>
  {{/if}}
  <dd.menu as |ddm|>
    {{#unless this.assignedUserIsLoggedInUser}}
      <ddm.item>
        <a
          class="dropdown-item"
          href="javascript:void(0)"
          {{action (perform this.setOrderAssignedUser this.orderId this.loggedInUserId)}}
        >
          {{loggedInUsername}}
        </a>
      </ddm.item>
    {{/unless}}
    {{#if this.assignedUserId}}
      <ddm.item>
        <a
          class="dropdown-item"
          href="javascript:void(0)"
          {{action (perform this.setOrderAssignedUser this.orderId null)}}
        >
          Sl√§pp order
        </a>
      </ddm.item>
    {{/if}}
  </dd.menu>
</BsDropdown>
<div class="ml-2 spinner{{if this.setOrderAssignedUser.isRunning " loading"}}">
  <i class="fas fa-spinner fa-spin"></i>
</div>
