<div class="d-flex justify-content-center">
  <div class="card login-form-card">
    <div class="card-body">
      <h5 class="card-title">Logga in i Fjärrkontrollen</h5>
        <BsForm @class="login-form" @model={{changeset}} @onSubmit={{action "authenticate" changeset}} as |form|>
          <form.element @controlType="text" @focusIn={{action "resetServerErrors" changeset}} @property="identification" @placeholder="X-konto" @autofocus={{true}} @required={{true}} />
          <form.element @controlType="password" @focusIn={{action "resetServerErrors" changeset}} @property="password" @placeholder="Lösenord" @required={{true}} />
          <BsButton @type="primary" @buttonType="submit" @disabled={{or form.isSubmitting changeset.isInvalid}}>
            Logga in
            {{#if form.isSubmitting}}
              <i class="fas fa-spinner fa-spin"></i>
            {{/if}}
          </BsButton>
        </BsForm>
    </div>
  </div>
</div>
{{outlet}}
